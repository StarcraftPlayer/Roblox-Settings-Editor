<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="avares://Roblox Settings Editor/Assets/Icons/App_Icon.png"
        x:Class="Roblox_Settings_Editor.MainWindow"
        Title="Roblox Settings Editor"
        Width="300" Height="675"
        CanResize="False"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        TransparencyLevelHint="Transparent">
    <Border CornerRadius="16" Background="White" Padding="0">
        <!-- Custom Title Bar -->
        <ScrollViewer>

            <StackPanel Margin="16" Spacing="8">
                <!-- Header -->
                <Border Padding="8" Background="{StaticResource BackgroundAccent}" CornerRadius="8">
                    <StackPanel x:Name="HeaderPanel" Spacing="4">
                        <Grid ColumnSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                            Grid.Column="0"
                            Text="RBLX Settings Editor"
                            Foreground="{StaticResource PrimaryBrush}"
                            FontSize="18"
                            FontWeight="Bold"/>
                            <Button Grid.Column="1" Width="24" Height="24" Padding="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="-" Click="MinimizeButton_Click"/>
                            <Button Grid.Column="2" Width="24" Height="24" Padding="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="X" Click="CloseButton_Click"/>
                        </Grid>
                        <Grid ColumnSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderThickness="2" BorderBrush="{StaticResource PrimaryBrush}" Width="26" Height="26">
                                <Image Source="avares://Roblox Settings Editor/Assets/Icons/App_Icon.ico" Width="24" Height="24"/>
                            </Border>
                            <TextBlock
                            Text="By Ybg"
                            Foreground="{StaticResource SecondaryBrush}"
                            FontSize="14"
                            FontWeight="Bold"
                            Grid.Column="1"
                            Margin="0, 0, 0, 16"/>
                            <HyperlinkButton
                            Grid.Column="2"
                            NavigateUri="https://github.com/StarcraftPlayer/Roblox Settings Editor">

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Image
                                    Width="16"
                                    Height="16"
                                    Source="avares://Roblox Settings Editor/Assets/Icons/GitHub_Invertocat_Black.png" />

                                    <TextBlock Text="GitHub" />
                                </StackPanel>

                            </HyperlinkButton>

                        </Grid>
                        <SelectableTextBlock
                        x:Name="FilePathSelectableTextBox"
                        Foreground="{StaticResource TertiaryBrush}"
                        TextWrapping="Wrap"
                        Opacity="0.7"
                        Text="You can find your settings file at C:\Users\[Your User]\AppData\Local\Roblox\GlobalBasicSettings_13.xml"/>
                        <Button Content="Copy Path" Click="CopyPathButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- File Selector -->
                <StackPanel Spacing="4">
                    <TextBlock
                    Foreground="{StaticResource TertiaryBrush}"
                    Text="Settings File"
                    FontSize="14"
                    FontWeight="SemiBold"/>
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="4">
                        <TextBox
                        Foreground="{StaticResource TertiaryBrush}"
                        x:Name="FilePathTextBox"
                        Grid.Column="0"
                        Watermark="Select settings file..."
                        IsReadOnly="True"
                        Height="40"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"/>
                        <Button
                        Background="{StaticResource SecondaryBrush}"
                        Foreground="{StaticResource Background}"
                        x:Name="BrowseButton"
                        Grid.Column="1"
                        Content="Browse"
                        Click="BrowseButton_Click"
                        Height="40"/>
                    </Grid>
                </StackPanel>

                <!-- FPS Input -->
                <StackPanel Spacing="4">
                    <TextBlock
                    Foreground="{StaticResource TertiaryBrush}"
                    Text="FPS Limit"
                    FontSize="14"
                    FontWeight="SemiBold"/>
                    <TextBox
                    Foreground="{StaticResource TertiaryBrush}"
                    x:Name="FpsInput"
                    VerticalContentAlignment="Center"
                    Watermark="Enter FPS value (e.g., 144)"
                    Height="40"
                    TextChanged="FpsInputTextChanged"
                    HorizontalContentAlignment="Center"/>
                </StackPanel>

                <!-- Graphics Level -->
                <StackPanel Spacing="4">
                    <TextBlock
                    x:Name="GraphicsLevelTextBlock"
                    Text="Graphics Level: 10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TertiaryBrush}"/>
                    <Slider
                    x:Name="GraphicsLevelSlider"
                    Minimum="1"
                    Maximum="21"
                    Value="10"
                    ValueChanged="GraphicsLevelSlider_ValueChanged"/>
                </StackPanel>

                <!-- Volume Level -->
                <StackPanel Spacing="4">
                    <TextBlock
                    x:Name="VolumeLevelTextBlock"
                    Text="Volume Level: 10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TertiaryBrush}"/>
                    <Slider
                    x:Name="VolumeLevelSlider"
                    Minimum="0"
                    Height="40"
                    Maximum="10"
                    Value="3"
                    ValueChanged="VolumeLevelSlider_ValueChanged"/>
                </StackPanel>

                <!-- Fullscreen -->
                <Button x:Name="FullScreenButton"
                        Content="Fullscreen: Off" Click="ChangeFullScreen" Background="SlateGray"/>

                <!-- Window Size -->
                <StackPanel Spacing="4">
                    <TextBlock
                    x:Name="WindowSizeTextBlock"
                    Text="Window Size: 640x360"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TertiaryBrush}"/>
                    <Slider
                    x:Name="WindowSizeXSlider"
                    Minimum="1"
                    Maximum="21"
                    Value="10"
                    ValueChanged="WindowSizeXSlider_ValueChanged"/>
                    <Slider
                    x:Name="WindowSizeYSlider"
                    Minimum="1"
                    Height="40"
                    Maximum="21"
                    Value="10"
                    ValueChanged="WindowSizeYSlider_ValueChanged"/>
                </StackPanel>

                <!-- Set FPS Button -->
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="4">
                    <Button
                    Background="{StaticResource SecondaryBrush}"
                    Foreground="{StaticResource Background}"
                    x:Name="SetSettingsButton"
                    Grid.Column="0"
                    Content="Set Settings"
                    Height="40"
                    FontSize="14"
                    Click="SettingsButtonClicked"
                    FontWeight="SemiBold"/>
                    <TextBlock
                    Foreground="{StaticResource TertiaryBrush}"
                    x:Name="StatusMessage"
                    Grid.Column="1"
                    Text=""
                    Height="40"
                    Opacity="0.7"
                    TextWrapping="Wrap"
                    Margin="12,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>